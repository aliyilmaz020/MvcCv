@model MvcCv.Models.Entity.Admin
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<title>Yeni Admin Ekleme</title>
<br />
<h3>Yeni Admin Ekleme Sayfası</h3>
<br />
<form method="post">
    <input type="text" name="Username" class="form-control" placeholder="Kullanıcı Adı" required />
    <br />
    <input type="text" name="Password" class="form-control" placeholder="Şifre" required />
    <br />
    <button class="btn btn-info" type="submit">Kaydet</button>
</form>

