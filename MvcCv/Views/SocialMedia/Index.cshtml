@using MvcCv.Models.Entity
@model List<SocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<title>Sosyal Medya</title>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Talent/AddTalent" class="btn btn-info">Yeni Sosyal Medya Hesabı Ekle</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Sosyal Medya</th>
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Name</td>
                                                <td>
                                                    <a href="/SocialMedia/Remove/@x.ID" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash">
                                                        </i> Sil
                                                    </a>
                                                    <a href="/SocialMedia/Edit/@x.ID" class="btn btn-info btn-sm">
                                                        <i class="fas fa-pencil-alt">
                                                        </i> Düzenle
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>


