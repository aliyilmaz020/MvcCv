@model MvcCv.Models.Entity.SocialMedia
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<title>Sosyal Medya Güncelleme</title>
<h2>Sosyal Medya Güncelleme Sayfası</h2>
<br />
<form method="post">
    <label>ID</label>
    <input type="text" name="ID" value="@Model.ID" class="form-control" readonly />
    <br />
    <label>Sosyal Medya Adı</label>
    <input type="text" name="Name" value="@Model.Name" class="form-control" />
    <br />
    <label>Sosyal Medya Linki</label>
    <input type="text" name="Link" value="@Model.Link" class="form-control" />
    <br />
    <label>İkon Adı</label>
    <input type="text" name="Icon" value="@Model.Icon" class="form-control" />
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>

