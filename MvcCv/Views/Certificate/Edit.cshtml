@model MvcCv.Models.Entity.Award
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<title>Sertifika Güncelleme</title>
<br />
<h3>Sertifika Güncelleme Sayfası</h3>
<br />
<form method="post">
    <label>ID</label>
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Okuduğu Tarih</label>
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    <button class="btn btn-success" type="submit">Güncelle</button>
    <a href="/Certificate/Remove/@Model.ID" class="btn btn-danger">Sil</a>
</form>



